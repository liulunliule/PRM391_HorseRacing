<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bgroundrace">

    <!-- Icon chiến thắng -->
    <ImageView
        android:id="@+id/ivTrophy"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Ngựa thắng -->
    <TextView
        android:id="@+id/tvWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🏇 Ngựa thắng: "
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="100px"
        app:layout_constraintTop_toBottomOf="@id/ivTrophy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bạn đã cược -->
    <TextView
        android:id="@+id/tvSelectedHorses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📌 Bạn đã cược: "
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvWinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Số điểm trước cược -->
    <TextView
        android:id="@+id/tvPointsBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="💰 Số điểm trước cược: "
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedHorses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Số điểm đặt cược -->
    <TextView
        android:id="@+id/tvBetPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎯 Số điểm đặt cược: "
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvPointsBefore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Số điểm sau cược -->
    <TextView
        android:id="@+id/tvPointsAfter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📈 Số điểm sau cược: "
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvBetPoints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nút Chơi lại -->
    <Button
        android:id="@+id/btnPlayAgain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🔄 Chơi lại"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvPointsAfter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nút Thoát -->
    <Button
        android:id="@+id/btnExit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="❌ Thoát"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_red"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnPlayAgain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
